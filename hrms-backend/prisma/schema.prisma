generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  password       String
  firstName      String
  lastName       String?
  role           Role            @default(AGILITY_EMPLOYEE)
  isActive       Boolean         @default(true)
  departmentId   String?
  position       String?
  salary         Float?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  reimbursements Reimbursement[]
  attendances    Attendance[]
  managedDept    Department?     @relation("DepartmentManager")
  approvals      Leave[]         @relation("LeaveApprover")
  leaves         Leave[]
  notifications  Notification[]
  payrolls       Payroll[]
  refreshTokens  RefreshToken[]
  department     Department?     @relation("DepartmentUsers", fields: [departmentId], references: [id])

  @@map("users")
}

model Department {
  id        String   @id @default(uuid())
  name      String   @unique
  managerId String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  manager   User?    @relation("DepartmentManager", fields: [managerId], references: [id])
  users     User[]   @relation("DepartmentUsers")

  @@map("departments")
}

model Attendance {
  id        String    @id @default(uuid())
  userId    String
  date      DateTime
  checkIn   DateTime?
  checkOut  DateTime?
  status    String
  note      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])

  @@index([userId, date])
  @@map("attendances")
}

model Leave {
  id          String    @id @default(uuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String

  type        LeaveType
  startDate   DateTime
  endDate     DateTime
  reason      String?

  rejectReason String?   // ‚≠ê NEW FIELD

  status      String    @default("PENDING")

  approverId  String?
  approver    User?     @relation("LeaveApprover", fields: [approverId], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId, startDate, endDate])
  @@map("leaves")
}


model Payroll {
  id          String   @id @default(uuid())
  userId      String
  salaryMonth DateTime
  baseSalary  Float
  bonus       Float    @default(0)
  deductions  Float    @default(0)
  netSalary   Float
  slipUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId, salaryMonth])
  @@map("payrolls")
}

model Reimbursement {
  id          String               @id @default(uuid())
  userId      String
  user        User                 @relation(fields: [userId], references: [id])

  title       String
  description String?
  totalAmount Float

  status      ReimbursementStatus  @default(PENDING)

  rejectReason String?   // ‚≠ê NEW FIELD

  createdAt   DateTime             @default(now())

  bills       Bill[]

  // Existing flags
  isEmployeeDeleted Boolean @default(false)
  isAdminDeleted    Boolean @default(false)
}

model Bill {
  id              String        @id @default(uuid())
  reimbursementId String
  fileUrl         String
  amount          Float
  note            String?
  reimbursement   Reimbursement @relation(fields: [reimbursementId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  body      String
  isRead    Boolean  @default(false)
  meta      Json?
  createdAt DateTime @default(now())
  /// NEW FIELD ‚Üí Track which employees have read the notification
  readByIds String[] @default([])
  user      User     @relation(fields: [userId], references: [id])

  @@map("notifications")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("refresh_tokens")
}

enum Role {
  ADMIN
  AGILITY_EMPLOYEE
  LYF_EMPLOYEE
}

enum LeaveType {
  PAID
  UNPAID
  SICK
  CASUAL
  WFH
  HALF_DAY   // üü£ NEW
}

enum ReimbursementStatus {
  PENDING
  APPROVED
  REJECTED
}
