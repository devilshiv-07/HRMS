generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * ===================== USER =====================
 */
model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  firstName String
  lastName  String?
  role      Role    @default(AGILITY_EMPLOYEE)
  isActive  Boolean @default(true)

  // ðŸ”´ OLD (KEEP â€” SAFE)
  departmentId String?
  department   Department? @relation("DepartmentUsers", fields: [departmentId], references: [id])

  // ðŸŸ¢ NEW (MULTI-DEPARTMENT SUPPORT)
  departments UserDepartment[]

  position  String?
  salary    Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reimbursements Reimbursement[]
  attendances    Attendance[]
  approvals      Leave[]         @relation("LeaveApprover")
  leaves         Leave[]
  notifications  Notification[]
  payrolls       Payroll[]
  refreshTokens  RefreshToken[]

  // ðŸŸ¢ MANAGER OF MULTIPLE DEPARTMENTS (SAFE)
  managedDepartments Department[] @relation("DepartmentManagers")

  @@map("users")
}

/**
 * ===================== DEPARTMENT =====================
 */
model Department {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ðŸ”´ OLD (KEEP)
  users User[] @relation("DepartmentUsers")

  // ðŸŸ¢ NEW (MULTI-MANAGER SUPPORT)
  managers User[] @relation("DepartmentManagers")

  // ðŸŸ¢ NEW (MULTI-DEPARTMENT MEMBERS)
  members UserDepartment[]

  @@map("departments")
}

/**
 * ===================== USER â†” DEPARTMENT (JOIN TABLE) =====================
 */
model UserDepartment {
  id           String @id @default(uuid())
  userId       String
  departmentId String

  user       User       @relation(fields: [userId], references: [id])
  department Department @relation(fields: [departmentId], references: [id])

  @@unique([userId, departmentId])
  @@map("user_departments")
}

/**
 * ===================== ATTENDANCE =====================
 */
model Attendance {
  id        String    @id @default(uuid())
  userId    String
  date      DateTime
  checkIn   DateTime?
  checkOut  DateTime?
  status    String
  note      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId, date])
  @@map("attendances")
}

/**
 * ===================== LEAVE =====================
 */
model Leave {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  type         LeaveType
  startDate    DateTime
  endDate      DateTime
  reason       String?
  rejectReason String?
  status       String    @default("PENDING")

  approverId String?
  approver   User?   @relation("LeaveApprover", fields: [approverId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, startDate, endDate])
  @@map("leaves")
}

/**
 * ===================== PAYROLL =====================
 */
model Payroll {
  id          String   @id @default(uuid())
  userId      String
  salaryMonth DateTime
  baseSalary  Float
  bonus       Float    @default(0)
  deductions  Float    @default(0)
  netSalary   Float
  slipUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId, salaryMonth])
  @@map("payrolls")
}

/**
 * ===================== REIMBURSEMENT =====================
 */
model Reimbursement {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  title        String
  description  String?
  totalAmount  Float
  status       ReimbursementStatus @default(PENDING)
  rejectReason String?

  isEmployeeDeleted Boolean @default(false)
  isAdminDeleted    Boolean @default(false)

  createdAt DateTime @default(now())
  bills     Bill[]
}

/**
 * ===================== BILL =====================
 */
model Bill {
  id              String  @id @default(uuid())
  reimbursementId String
  fileUrl         String
  amount          Float
  note            String?

  reimbursement Reimbursement @relation(fields: [reimbursementId], references: [id])
}

/**
 * ===================== NOTIFICATION =====================
 */
model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  body      String
  isRead    Boolean  @default(false)
  meta      Json?
  readByIds String[] @default([])
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("notifications")
}

/**
 * ===================== REFRESH TOKEN =====================
 */
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("refresh_tokens")
}

/**
 * ===================== ENUMS =====================
 */
enum Role {
  ADMIN
  AGILITY_EMPLOYEE
  LYF_EMPLOYEE
}

enum LeaveType {
  PAID
  UNPAID
  SICK
  CASUAL
  WFH
  HALF_DAY
}

enum ReimbursementStatus {
  PENDING
  APPROVED
  REJECTED
}
