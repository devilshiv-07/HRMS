generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// *
///  * ===================== USER =====================
model User {
  id                 String           @id @default(uuid())
  email              String           @unique
  password           String
  firstName          String
  lastName           String?
  role               Role             @default(AGILITY_EMPLOYEE)
  isActive           Boolean          @default(true)
  departmentId       String?
  position           String?
  salary             Float?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  reimbursements     Reimbursement[]
  attendances        Attendance[]
  approvals          Leave[]          @relation("LeaveApprover")
  leaves             Leave[]
  notifications      Notification[]
  payrolls           Payroll[]
  refreshTokens      RefreshToken[]
  departments        UserDepartment[]
  department         Department?      @relation("DepartmentUsers", fields: [departmentId], references: [id])
  managedDepartments Department[]     @relation("DepartmentManagers")

  leaveApprovals         LeaveApproval[]
  reimbursementApprovals ReimbursementApproval[]

  // üî• Resignation relation added
  resignations Resignation[]

  /// üî• CompOff balance and relation
  compOffBalance Float       @default(0) // supports 0.5 half-day
  compOffs       CompOff[]
  weeklyOffs     WeeklyOff[]

  @@map("users")
}

/// *
///  * ===================== WEEKLY/OFF (Roster + Weekly Supported)
model WeeklyOff {
  id        String    @id @default(uuid())
  userId    String
  offDay    String? // "Monday" (Weekly Off)
  offDate   DateTime? // One time Date Off
  isFixed   Boolean   @default(true) // true=Weekly repeated, false=Roster/one-time
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
}

/// *
///  * ===================== COMP-OFF MODEL =====================
model CompOff {
  id         String    @id @default(uuid())
  userId     String
  workDate   DateTime
  duration   Float     @default(1) // 1 = full, 0.5 = half ‚≠ê
  status     String    @default("PENDING") // APPROVED, REJECTED
  approvedAt DateTime?
  expiryDate DateTime?
  note       String?

  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// *
///  * ===================== DEPARTMENT =====================
model Department {
  id        String           @id @default(uuid())
  name      String           @unique
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  members   UserDepartment[]
  users     User[]           @relation("DepartmentUsers")
  managers  User[]           @relation("DepartmentManagers")

  @@map("departments")
}

/// *
///  * ===================== USER ‚Üî DEPARTMENT (JOIN TABLE) =====================
model UserDepartment {
  id           String     @id @default(uuid())
  userId       String
  departmentId String
  department   Department @relation(fields: [departmentId], references: [id])
  user         User       @relation(fields: [userId], references: [id])

  @@unique([userId, departmentId])
  @@map("user_departments")
}

/// *
///  * ===================== ATTENDANCE =====================
model Attendance {
  id        String    @id @default(uuid())
  userId    String
  date      DateTime
  checkIn   DateTime?
  checkOut  DateTime?
  status    String
  note      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])

  @@index([userId, date])
  @@map("attendances")
}

/// *
///  * ===================== LEAVE =====================
model Leave {
  id           String    @id @default(uuid())
  userId       String
  type         LeaveType
  startDate    DateTime
  endDate      DateTime
  reason       String?
  status       String    @default("PENDING")
  approverId   String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  rejectReason String?
  approver     User?     @relation("LeaveApprover", fields: [approverId], references: [id])
  user         User      @relation(fields: [userId], references: [id])

  approvals LeaveApproval[]

  @@index([userId, startDate, endDate])
  @@map("leaves")
}

/// *
///  * ===================== PAYROLL =====================
model Payroll {
  id          String   @id @default(uuid())
  userId      String
  salaryMonth DateTime
  baseSalary  Float
  bonus       Float    @default(0)
  deductions  Float    @default(0)
  netSalary   Float
  slipUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId, salaryMonth])
  @@map("payrolls")
}

/// *
///  * ===================== REIMBURSEMENT =====================
model Reimbursement {
  id                String              @id @default(uuid())
  userId            String
  title             String
  description       String?
  totalAmount       Float
  status            ReimbursementStatus @default(PENDING)
  createdAt         DateTime            @default(now())
  isAdminDeleted    Boolean             @default(false)
  isEmployeeDeleted Boolean             @default(false)
  rejectReason      String?
  bills             Bill[]
  user              User                @relation(fields: [userId], references: [id])

  approvals ReimbursementApproval[]
}

/// *
///  * ===================== BILL =====================
model Bill {
  id              String        @id @default(uuid())
  reimbursementId String
  fileUrl         String
  amount          Float
  note            String?
  reimbursement   Reimbursement @relation(fields: [reimbursementId], references: [id])
}

/// *
///  * ===================== NOTIFICATION =====================
model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  body      String
  isRead    Boolean  @default(false)
  meta      Json?
  createdAt DateTime @default(now())
  readByIds String[] @default([])
  user      User     @relation(fields: [userId], references: [id])

  @@map("notifications")
}

/// *
///  * ===================== REFRESH TOKEN =====================
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("refresh_tokens")
}

///////////////////////////
/// üî• UPDATED RESIGNATION
///////////////////////////
model Resignation {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Form fields
  lastWorking    DateTime
  reasonType     String   @default("Other")
  reason         String? // Optional text
  noticePeriod   Int?
  handoverDetail String?
  declaration    Boolean  @default(false)

  // Admin side
  status            ResignStatus @default(PENDING)
  rejectReason      String?
  isEmployeeDeleted Boolean      @default(false)
  isAdminDeleted    Boolean      @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LeaveApproval {
  id        String              @id @default(uuid())
  leaveId   String
  managerId String
  status    LeaveApprovalStatus @default(PENDING)
  reason    String?
  actedAt   DateTime?

  leave   Leave @relation(fields: [leaveId], references: [id])
  manager User  @relation(fields: [managerId], references: [id])

  @@unique([leaveId, managerId]) // 1 manager = 1 decision per leave
}

model ReimbursementApproval {
  id              String                      @id @default(uuid())
  reimbursementId String
  managerId       String
  status          ReimbursementApprovalStatus @default(PENDING)
  reason          String?
  actedAt         DateTime?

  reimbursement Reimbursement @relation(fields: [reimbursementId], references: [id])
  manager       User          @relation(fields: [managerId], references: [id])

  @@unique([reimbursementId, managerId])
}

/// *
///  * ===================== ENUMS =====================
enum Role {
  ADMIN
  AGILITY_EMPLOYEE
  LYF_EMPLOYEE
}

enum LeaveType {
  PAID
  UNPAID
  SICK
  CASUAL
  WFH
  HALF_DAY
  COMP_OFF
}

enum ReimbursementStatus {
  PENDING
  APPROVED
  REJECTED
}

enum LeaveApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ReimbursementApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ResignStatus {
  PENDING
  APPROVED
  REJECTED
}
